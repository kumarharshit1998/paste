@{
    var isDisabled = ViewBag.MyValue == 0;
    var linkClass = isDisabled ? "disabled-link" : "btn";
    var tabIndex = isDisabled ? "-1" : null;
    var ariaDisabled = isDisabled ? "true" : null;
}
<a asp-controller="Home" 
   asp-action="MyAction"
   class="@linkClass"
   tabindex="@tabIndex"
   aria-disabled="@ariaDisabled">
    My Link
</a>
<style>
.disabled-link {
    pointer-events: none;
    color: gray;
    text-decoration: none;
    cursor: not-allowed;
}
</style>
