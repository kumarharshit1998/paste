public async Task<List<AccountRow>> GetMatchingAccountsAsync(string cusln)
{
    var result = new List<AccountRow>();

    using (var connection = new SqlConnection(_connectionString))
    {
        await connection.OpenAsync();

        using (var command = new SqlCommand("GetMatchingAccounts", connection))
        {
            command.CommandType = CommandType.StoredProcedure;
            command.Parameters.AddWithValue("@Cusln", cusln);

            using (var reader = await command.ExecuteReaderAsync())
            {
                while (await reader.ReadAsync())
                {
                    var row = new AccountRow
                    {
                        Cusln = reader["Cusln"].ToString(),
                        SomeColumn1 = reader["SomeColumn1"].ToString(),
                        SomeColumn2 = reader["SomeColumn2"].ToString()
                        // Map the rest of your columns
                    };

                    result.Add(row);
                }
            }
        }
    }

    return result;
}
