using Microsoft.Data.SqlClient;
using Microsoft.EntityFrameworkCore;
using System.Data;
using YourNamespace.Data;

namespace YourNamespace.Repositories
{
    public interface IExcelImportRepository
    {
        void RunStoredProcedure(string acctNum, string src, string stat, string user, string endDate, int RAto);
    }

    public class ExcelImportRepository : IExcelImportRepository
    {
        private readonly ApplicationDbContext _db;

        public ExcelImportRepository(ApplicationDbContext db)
        {
            _db = db;
        }

        public void RunStoredProcedure(string acctNum, string src, string stat, string user, string endDate, int RAto)
        {
            using var command = _db.Database.GetDbConnection().CreateCommand();
            command.CommandText = "Your_StoredProcedure_Name"; // Replace with your SP name
            command.CommandType = CommandType.StoredProcedure;

            command.Parameters.Add(new SqlParameter("@AcctNum", acctNum));
            command.Parameters.Add(new SqlParameter("@Src", src));
            command.Parameters.Add(new SqlParameter("@Stat", stat));
            command.Parameters.Add(new SqlParameter("@Usr", user));
            command.Parameters.Add(new SqlParameter("@ComEndDt", endDate));
            command.Parameters.Add(new SqlParameter("@RAto", RAto));

            _db.Database.OpenConnection();
            command.ExecuteNonQuery();
            _db.Database.CloseConnection();
        }
    }
}
